generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Event {
  id          Int       @id @default(autoincrement())
  title       String
  date        DateTime
  description String
  capacity    Int
  attendees   Attendee[]
}


model Attendee {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  eventId  Int
  event    Event  @relation(fields: [eventId], references: [id])
}